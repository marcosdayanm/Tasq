@using Tasq.ViewModels
@model DetailDepartamentoVM


<div class="container">


    <h1 class="my-4">
        Departamento @Model.Departamento.Nombre
        <span style="color: darkgray">Detalles</span>

    </h1>


    <div class="row">

        <div class="col-md-8">
            <img class="img-fluid" width="100%" height="500" src="@Model.Departamento.FotoUrl" alt="">
        </div>

        <div class="col-md-4">
            <h3 class="my-3">Descripción</h3>
            <p>@Model.Departamento.Descripcion</p>
            <h4 class="my-3">Sede</h4>
            <span>@Model.Departamento.Sede.Nombre</span> <br />

        </div>

    </div>

    <h3 class="my-4">Tareas Pendientes</h3>


    <div>
        <a>Crear una Tarea en @Model.Departamento.Nombre</a>
        <a type="button" class="btn btn-primary" asp-area="" asp-controller="tarea" asp-action="create" asp-route-id="@Model.Departamento.Id">Crear</a>
    </div>


    <div class="album py-5 bg-body-tertiary">
        <div class="container">
            <div class="row row-cols-1">

                @foreach (var item in Model.Tareas)
                {
                    <div class="col-12">
                        <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                            <div class="col p-4 d-flex flex-column position-static">

                                <strong class="d-inline-block mb-2 text-success-emphasis">@item.FechaEntrega</strong>
                                <h3 class="mb-0">@item.Nombre</h3>


                                @if (item.User != null)
                                {
                                    <div class="mb-1 text-body-secondary">Responsable: <strong> @item.User.Nombre </strong></div>
                                }
                                else
                                {
                                    <div class="mb-1 text-body-secondary">Responsable: <strong> No asignado </strong></div>
                                }

                                <br />
                                <div class="btn-group">
                                    <a asp-controller="tarea" asp-action="Me" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">Anotarme</a>
                                    @*if (User.Identity.IsAuthenticated && User.IsInRole("admin"))    @* Lo del role tiene que matchear exactamente, es case sensitive *@
                                    {
                                    <a asp-controller="tarea" asp-action="edit" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">Editar</a>

                                    }
                                </div>

                                <p class="mb-auto">@item.Descripcion</p>

                            </div>

                            <div class="col-auto d-none d-lg-block">
                                <svg class="bd-placeholder-img" width="200" height="250" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c" /><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>

