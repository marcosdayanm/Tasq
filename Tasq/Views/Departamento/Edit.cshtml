@using Tasq.ViewModels
@model EditDepartamentoVM


<title>
    @{
        ViewData["Title"] = "Departamentos";
    }
</title>



<h1>Editar @Model.Nombre</h1>

<br>
<br>

<form method="post" asp-action="Edit">

    <div class="form-group">
        <input type="hidden" value="Id" id="Id" /> @* Éste field es para que el ID se quede registrado y lo podamos usar para acceder a la DB y editar el elemento necesario *@

        <label asp-for="Nombre">Nombre</label>
        <input asp-for="Nombre" class="form-control" placeholder="Nombre de la Sede">
        <span asp-validation-for="Nombre" class="text.danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion">Descripcion</label>
        <input asp-for="Descripcion" class="form-control" placeholder="Descripción">
        <span asp-validation-for="Descripcion" class="text.danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FotoUrl">FotoUrl</label>
        <input asp-for="FotoUrl" class="form-control" placeholder="Imagen (URL)">
        <span asp-validation-for="FotoUrl" class="text.danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Guardar</button>

</form>

<div class="form-group">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar Departamento" class="btn btn-danger float right mt-3" />
    </form>
</div>

