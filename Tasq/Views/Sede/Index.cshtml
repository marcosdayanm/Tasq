@model IEnumerable<Sede>


<title>
    @{
        ViewData["Title"] = "Sedes";
    }
</title>


<div class="d-flex flex-column flex-sm-row justify-content-between align-items-center">
    <h1>Todas las Sedes</h1>
    @if (User.IsInRole("admin"))
    {
        <a type="button" class="btn btn-primary" asp-area="" asp-controller="sede" asp-action="create">Crear una Sede</a>
    }
</div>



<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">


            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <a asp-controller="sede" asp-action="detail" asp-route-id="@item.Id"> <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="@item.FotoUrl" role="img"> </a>
                        <div class="card-body">
                            <p class="card-text"><strong>@item.Nombre</strong></p>
                            <p class="card-text">@item.Descripcion</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="sede" asp-action="detail" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">Ver</a>  <!-- Para poner lo de los helpers, los botones tienen pedos con eso, es mejor usar anchor tags -->
                                    @if (User.IsInRole("admin"))@* Lo del role tiene que matchear exactamente, es case sensitive *@
                                    {
                                        <a asp-controller="sede" asp-action="edit" asp-route-id="@item.Id" type="button" class="btn btn-sm btn-outline-secondary">Editar</a>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>